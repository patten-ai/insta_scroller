{
  "manifest_version": 3,
  "name": "Instagram Comment Scroller",
  "version": "1.0",
  "description": "اسکرول خودکار کامنت‌های اینستاگرام تا انتها",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [ "https://www.instagram.com/*" ],
      "js": [ "content.js" ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
